#include <bits/stdc++.h>
using namespace std;

int main() {
	// your code goes here
	//Check if the ith bit is set or not 
	
	int n = 13;
	
	int i = 2;
	
	
	//With the left shift
	if (n & (1 << i))
	{
	    cout << "Bit is set" ;
	}
	else
	{
	    cout << "Bit is not set" ;
	}
	
	cout << endl;
	
	//With the right shift
	if ((n>>i)&1)
	{
	    cout << "Bit is set" ;
	}
	else
	{
	    cout << "Bit is not set" ;
	}
	
	
	

}
